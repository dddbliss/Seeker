<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Seeker"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">
    
    <sys:Double x:Key="WindowTitleFontSize">12</sys:Double>
    <sys:Double x:Key="TabItemFontSize">16</sys:Double>

    <FontFamily x:Key="HeaderFontFamily">Segoe UI Normal, Lucida Sans Unicode, Verdana</FontFamily>

    <!--ACCENT COLORS-->

    <Color x:Key="PrimaryText">#FF000000</Color>
    <Color x:Key="SecondaryText">#FF673AB7</Color>
    <Color x:Key="Divider">#FF673AB7</Color>

    <Color x:Key="WindowTitleBackground">#FFFFFFFF</Color>
    <Color x:Key="AccentColorDarker">#FF3F494E</Color>
    <Color x:Key="AccentColorLight">#FF81929A</Color>

    <Color x:Key="IdealForegroundColor">White</Color>
    <SolidColorBrush x:Key="IdealForegroundColorBrush" Color="{StaticResource PrimaryText}"/>

</ResourceDictionary>